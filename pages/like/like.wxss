select{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5rpx;
}
.btn {
    width: 80%;
    height: 80%;
    margin-top: 20rpx;
    background-color: #ffcc66;
    color: rgb(255, 255, 255);
    border-radius: 98rpx;
} 
.input{
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    width: 300rpx;
    border-radius: 6rpx;
    margin: 0 0 3px 350rpx;
    opacity: 0.0;
}
.image{
    width: 100%;
    height: 30%;
}
.txt{
    font-size: 28rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 6rpx;
    margin: 0 0 3px 35rpx;
}
